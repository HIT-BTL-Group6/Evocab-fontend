<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.practice.WriteMeaningFragment">


    <ImageView
        android:id="@+id/img_word"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:src="@drawable/h1_1048"
        app:layout_constraintBottom_toTopOf="@+id/english_word"
        app:layout_constraintEnd_toEndOf="@+id/english_word"
        app:layout_constraintStart_toStartOf="@+id/english_word"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

    <EditText
        android:id="@+id/edt_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/color_text_input"
        android:text="sdfssdf"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/english_word"
        app:layout_constraintStart_toStartOf="@+id/english_word"
        app:layout_constraintTop_toBottomOf="@+id/english_word"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/english_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_input"
        android:text="Quáº£ cherry"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48" />
</androidx.constraintlayout.widget.ConstraintLayout>